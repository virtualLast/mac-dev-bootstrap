        }
    ],
    "require": {
        "phpunit/phpunit": "*",
        "symfony/phpunit-bridge": "*",
        "friendsofphp/php-cs-fixer": "*",
        "phpstan/phpstan": "*",
        "symfony/maker-bundle": "*",
        "symfony/console": "*",
        "symfony/var-dumper": "*",
        "psy/psysh": "*"
    },
    "scripts": {
